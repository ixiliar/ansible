##
## BIND_TIMELIMIT seconds
##  The BIND_TIMELIMIT parameter specifies the amount of
##  time to wait while trying to connect to an LDAP server.
##
bind_timelimit 10

##
## TIMELIMIT seconds
##  The TIMELIMIT parameter specifies the amount of time
##  to wait for a response to an LDAP query.
##
timelimit 10


SUDOERS_BASE OU=Sudos,OU=C8Unix,OU=TGS-USERS,DC=tgs,DC=local
#sudoers_debug 25
base	dc=tgs,dc=local
uri	ldaps://tgs-w2pad1.tgs.local ldaps://tgs-w2pad2.tgs.local
binddn	cn=Ldap,cn=Users,dc=tgs,dc=local
bindpw	d50_*spg
ssl start_tls
ssl on
# option tls_checkpeer is deprecated (and will be removed in an upcoming release), use tls_reqcert instead. By: jvidal
#tls_checkpeer yes
tls_reqcert yes
tls_cacertfile /etc/cert_ca.pem
